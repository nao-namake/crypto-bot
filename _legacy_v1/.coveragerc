[run]
# カバレッジデータの保存場所を指定
data_file = .coverage_data/.coverage

# カバレッジ対象のソースコード
source = crypto_bot

# 除外パターン
omit = 
    */tests/*
    */test_*
    */__pycache__/*
    */site-packages/*

[report]
# カバレッジレポートから除外するパターン
exclude_lines =
    # デバッグ用のコード
    pragma: no cover
    def __repr__
    if self.debug:
    if settings.DEBUG
    raise AssertionError
    raise NotImplementedError
    if 0:
    if __name__ == .__main__.:
    class .*\bProtocol\):
    @(abc\.)?abstractmethod

[html]
# HTMLレポートの出力先
directory = .coverage_data/htmlcov

[xml]
# XMLレポートの出力先
output = .coverage_data/coverage.xml