[flake8]
max-line-length = 88

# 既存の ignore に加えて docstring 周りの D2xx/D4xx 全部と D403 を無視
# 品質重視設定：重要な問題（F401/F821/E402/F841）は修正する
extend-ignore =
    E203,
    W503,
    E501,
    B007,
    B023,
    D100,
    D101,
    D102,
    D103,
    D104,
    D105,
    D107,
    D200,
    D202,
    D204,
    D205,
    D300,
    D302,
    D400,
    D403

# チェック対象外ディレクトリ
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    crypto_bot/data/.ipynb_checkpoints,
    tests/integration,
    scripts