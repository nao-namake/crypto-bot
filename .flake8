[flake8]
max-line-length = 100
target-version = py313

# 品質基準: 653テスト100%・58.62%カバレッジ・企業級品質達成
# 基本的なコード品質エラーは修正対象とし、実用性とのバランスを取る
extend-ignore =
    E402,
    F401,
    E203,
    W503,
    W504,
    E501,
    E704,
    D100,D101,D102,D103,D104,D105,D107,
    D200,D202,D204,D205,D300,D302,D400,D403,
    B007,
    B014

# 除外ディレクトリ
exclude = 
    .git,
    __pycache__,
    .venv,venv,env,
    build,dist,
    .cache,
    _legacy_v1,
    logs,results,
    .pytest_cache,
    htmlcov,
    *.egg-info,
    coverage-reports

per-file-ignores = 
    tests/*:F401,F811,E712,F841
    __init__.py:F401
    */config*.py:E501